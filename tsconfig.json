{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "./",
    "paths": {
            "@controllers/*": ["./src/api/controllers/*"],
            "@routes/*": ["./src/api/routes/*"],
            "@data/*": ["./src/data/*"]
          }
  },
  "exclude": [
    "./node_modules/",
    "./dist/"
  ]
}